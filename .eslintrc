{
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "object-curly-newline": ["error", { "consistent": true }],
    "import/newline-after-import": [
      "error",
      {
        "count": 2
      }
    ],
    "react/require-default-props": "off",
    "react/forbid-prop-types": "off",
    "react/prop-types": "off",
    "no-unused-vars": "off"
  }
}
